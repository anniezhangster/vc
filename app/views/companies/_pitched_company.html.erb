<%= render partial: 'summary', locals: {company: company} %>
<div class="list-group-item-text">
  <% if company.decision_at.present? %>
    <%= render partial: 'shared/stats', locals: {vote: company.vote_for_user(current_user), stats: company.stats} %>
  <% elsif company.pitched? %>
    <% vote = company.user_votes(current_user).first %>
    <p class='companies--heading'>
      <% if vote.blank? %>
        You have not yet voted.
      <% elsif vote.final? %>
        You have submitted your final vote.
      <% else %>
        You have submitted your pre-vote.
      <% end %>
    </p>
  <% else %>
    <p class='companies--heading'>
      Pitch has not yet occured.
    </p>
  <% end %>
</div>
